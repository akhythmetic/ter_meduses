import zipfile
from pathlib import Path
from google.colab import drive

# Monter le Drive
#drive.mount('/content/drive')

#Les chemins des différents fichiers
drive_path = Path("Chemin ou se trouve le fichier .zip")  #le fichier .zip
extract_to = Path("Chemin ou extraire le fichier .zip")           #dossier de sortie

#Vérifie si le dossier existe
if not drive_path.exists():
    raise FileNotFoundError(f"Fichier introuvable : {drive_path}")

#Décompresse le fichier pour avoir accès aux données
extract_to.mkdir(parents=True, exist_ok=True)
with zipfile.ZipFile(drive_path, 'r') as zf:
    zf.extractall(extract_to)

print(f"Archive extraite dans : {extract_to.resolve()}")
